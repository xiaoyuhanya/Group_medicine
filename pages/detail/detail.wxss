}

.book-list-box {
  border-top: 1px solid #eee;
  margin-top: 10rpx;
}

.book-list-box image {
  width: 141rpx;
  height: 205rpx;
}

.book-list {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.right-box {
  padding-left: 48rpx;
}

.right-box .time {
  color: #999;
}

.right-box view {
  line-height: 1.5;
}

.right-box view {
  font-size: 30rpx;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  /* border-bottom: 1px solid gainsboro; */
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  /* border-right: 1px solid gainsboro; */
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
  background-color: #eee;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  flex: 1;
  /* border-right: 1px solid gainsboro; */
  font-weight: bold;
  font-size: 28rpx;
  background-color: #1474c1;
}

.show {
  display: block;
  font-size: 25rpx;
  /* padding: 20rpx; */
}

.title {
  text-align: center;
  margin-top: 20rpx;
}

.content {
  padding: 20rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

.btn-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: pink;
}

.btn-box .btn {
  background-color: #1474c1;
  color: #fff;
}

.comment-box {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}

.comment-gross {
}

.comment-gross .gross {
  padding-left: 10rpx;
}

.comment-box .comment-mine {
  color: #1374c1;
}

.comment-gross image {
  width: 38rpx;
  height: 25rpx;
}

.comment-list {
  margin-bottom:40px;

}

.comment-list .list {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
  box-sizing: border-box;
}

.comment-list .list .left-box {
}

.comment-list .list .left-box image {
  width: 121rpx;
  height: 121rpx;
}

.comment-list .list .right-box {
  padding-left: 20rpx;
  flex: 2;
}

.comment-list .list .right-box .username-box {
  flex: 2;
  display: flex;
  justify-content: space-between;
}

.comment-list .list .right-box .username-box .user {
  color: #f00;
}

.comment-list .list .right-box image {
  width: 32rpx;
  height: 27rpx;
}

.zan-box .zan-gross {
  color: #999;
}

.zan-box .zan-pic {
  margin-right: 10rpx;
}
