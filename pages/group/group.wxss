swiper {
  width: 100%;
  height: 334rpx;
}

swiper image {
  width: 100%;
  height: 334rpx;
}

.hot-box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding-bottom: 0;
}

.hot-box text {
  /* flex: 1; */
  font-size: 30rpx;
}

.hot-box .more {
  padding-right: 10rpx;
}

.hot-box image {
  width: 18rpx;
  height: 25rpx;
  margin-top: 8rpx;
}

.book_box {
  padding: 20rpx;
  box-sizing: border-box;
}

.book {
  display: flex;
  padding: 20rpx;
   border: 1px solid #1b6bc0; 
  box-sizing: border-box;
}

.book_box image {
  flex: 1;
  width: 123rpx;
  height: 148rpx;
  margin-left: 10rpx;
}
.book_box image:first-child{
  margin-left: 0;
}

.book-list-box {
  border-top: 1px solid #eeeeee;
  margin-top:10rpx;

}

.book-list-box image {
  width: 141rpx;
  height: 205rpx;
}

.book-list {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
   border-bottom: 1px solid #eeeeee;
}

.right-box {
  
  padding-left: 48rpx;
}

.right-box view {
  font-size: 30rpx;
}
